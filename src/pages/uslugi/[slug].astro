---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ProcessSection from '../../components/ProcessSection.astro';
import ServiceAreasSection from '../../components/ServiceAreasSection.astro';
import GoogleReviewsSection from '../../components/GoogleReviewsSection.astro';
import CookieConsent from '../../components/CookieConsent';
import HeroCarousel from '../../components/HeroCarousel';
import { services, getServiceBySlug, type Service } from '../../data/services';

// Generate static paths for all services
export function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
  }));
}

const { slug } = Astro.params;
const service = getServiceBySlug(slug as string);

if (!service) {
  return Astro.redirect('/404');
}

const title = `${service.title} | Grand Kuchnie`;
const description = service.heroSubtitle;

