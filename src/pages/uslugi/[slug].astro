const gradients = [
  'from-blue-500 to-purple-500',
  'from-primary to-orange-400',
  'from-green-400 to-teal-500',
];
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="pt-6 pb-16 px-4 bg-white mt-16">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="text-4xl lg:text-4xl font-bold text-secondary mb-6">
              {service.heroTitle}
            </h1>
            <p class="text-xl text-gray-600 mb-8">
              {service.heroSubtitle}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
              <a
                href={service.ctaUrl}
                class="btn btn-primary btn-lg w-full sm:w-auto"
              >
                {service.ctaButton}
              </a>
              <a
                href={service.realizationsCategorySlug ? `/realizacje?category=${service.realizationsCategorySlug}` : '/realizacje'}
                class="btn btn-outline btn-lg w-full sm:w-auto"
              >
                Zobacz realizacje
              </a>
            </div>
          </div>

          <div class="relative h-[400px] lg:h-[500px]">
            <div class="relative w-full h-full overflow-hidden rounded-2xl">
              <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20 z-10 rounded-2xl"></div>
              <img
                src={service.heroImages[0]}
                alt={service.heroTitle}
                class="absolute inset-0 w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    {service.benefits && service.benefits.length > 0 && (
      <section class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
          <h2 class="text-4xl font-bold text-center text-secondary mb-16">
            {service.benefitsTitle}
          </h2>
          <div class="grid gap-8 lg:grid-cols-3">
            {service.benefits.map((benefit, index) => (
              <div class="group relative p-8 bg-white rounded-2xl shadow-lg">
                <div class={`w-16 h-16 mb-6 rounded-xl bg-gradient-to-br ${gradients[index % 3]} flex items-center justify-center`}>
                  <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconMap[benefit.icon] || iconMap.Shield} />
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-secondary mb-4">
                  {benefit.title}
                </h3>
                <p class="text-gray-600">{benefit.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <ProcessSection />

    <!-- Highlights Section (e.g., for projektowanie-kuchni) -->
    {service.highlights && service.highlights.length > 0 && (
      <section class="py-24 bg-gradient-to-b from-white to-gray-50">
        <div class="max-w-7xl mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-secondary mb-4">Nasi projektanci</h2>
            <div class="flex items-center justify-center gap-2">
              <div class="h-px bg-primary w-12"></div>
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
                <path d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              <div class="h-px bg-primary w-12"></div>
            </div>
          </div>

          <div class="grid lg:grid-cols-2 gap-8">
            {service.highlights.map((highlight, index) => (
              <div class="group relative">
                <div class="relative bg-white rounded-3xl shadow-lg overflow-hidden">
                  <div class="aspect-[16/10] relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-secondary/10 z-10"></div>
                    <img
                      src={highlight.imageUrl}
                      alt={highlight.title}
                      class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
                    />
                    <div class="absolute -bottom-1 left-0 right-0 h-24 bg-gradient-to-t from-white via-white/95 to-transparent z-20"></div>
                  </div>
                  <div class="relative -mt-12 px-8 pb-8 z-30">
                    <div class="bg-white rounded-2xl p-6 shadow-sm">
                      <h3 class="text-2xl font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
                        {highlight.title}
                      </h3>
                      <p class="text-gray-600 leading-relaxed">
                        {highlight.description}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <ServiceAreasSection />
    <GoogleReviewsSection />

    <!-- CTA Section -->
    <section class="py-20 bg-secondary text-white">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold mb-6">
          {service.contactTitle}
        </h2>
        <p class="text-xl mb-8 text-gray-300">
          {service.contactSubtitle}
        </p>
        <a href="/kontakt" class="btn btn-primary btn-lg">
          {service.contactCta}
        </a>
      </div>
    </section>
  </main>

  <Footer />
  <CookieConsent client:load />
</Layout>