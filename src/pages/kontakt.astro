---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm';
import CookieConsent from '../components/CookieConsent';

const title = 'Kontakt | Grand Kuchnie - Darmowa wycena kuchni na wymiar';
const description = 'Skontaktuj się z nami i uzyskaj darmową wycenę kuchni na wymiar. Toruń, ul. Polna 134. Tel: 576 376 567. Email: kontakt@grandkuchnie.pl';
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="min-h-screen pt-8 bg-white">
    <div class="max-w-7xl mx-auto px-4 py-12">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Left column - contact info -->
        <div>
          <h1 class="text-4xl font-bold text-secondary mb-6">
            Uzyskaj darmową wycenę
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Wypełnij formularz kontaktowy - napisz, jaką kuchnię chcesz
            zlecić, jakie są Twoje wymagania i co możemy dla Ciebie zrobić,
            a w ciągu dwóch dni roboczych odpowiemy na Twoją wiadomość i
            zaproponujemy darmową wycenę.
          </p>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-semibold text-lg">Email</h3>
                <a href="mailto:kontakt@grandkuchnie.pl" class="text-gray-600 hover:text-primary transition-colors">
                  kontakt@grandkuchnie.pl
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-semibold text-lg">Telefon</h3>
                <a href="tel:576376567" class="text-gray-600 hover:text-primary transition-colors">
                  576 376 567
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-semibold text-lg">Adres</h3>
                <p class="text-gray-600">
                  ul. Polna 134, hala nr 3<br />
                  87-100 Toruń
                </p>
              </div>
            </div>

            <!-- Map -->
            <div class="mt-8">
              <h3 class="font-semibold text-lg mb-4">Znajdź nas</h3>
              <div class="w-full h-80 rounded-lg overflow-hidden shadow-md">
                <iframe
                  src="https://maps.google.com/maps?ll=53.036838,18.645306&z=12&t=m&hl=pl-PL&gl=US&mapclient=embed&cid=5022096919319516035&output=embed"
                  width="100%"
                  height="100%"
                  style="border: 0"
                  allowfullscreen={false}
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  title="Lokalizacja MebleSystem"
                ></iframe>
              </div>
            </div>
          </div>
        </div>

        <!-- Right column - form -->
        <div>
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </main>

  <Footer />
  <CookieConsent client:load />
</Layout>