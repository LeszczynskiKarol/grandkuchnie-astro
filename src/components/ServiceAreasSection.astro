---
// ServiceAreasSection.astro - Gdzie działamy?
import { serviceAreas } from '../data/cities';
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-secondary mb-16">
      Gdzie działamy?
    </h2>

    <!-- Mobile version -->
    <div class="md:hidden space-y-4">
      {serviceAreas.map((area) => (
        <div
          class={`relative h-48 rounded-2xl overflow-hidden ${area.isMain ? 'bg-secondary' : ''}`}
        >
          <img
            src={area.image}
            alt={area.name}
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-transparent to-secondary/80" />
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3 class="text-xl font-bold text-white">{area.name}</h3>
            {area.isMain && area.description && (
              <p class="text-gray-200 text-sm mt-2">
                {area.description}
              </p>
            )}
            {!area.isMain && (
              <div class="mt-2">
                <a
                  href={area.slug}
                  class="px-4 py-2 bg-primary text-secondary rounded-full text-sm hover:bg-primary/90 transition-colors inline-block"
                >
                  Zobacz więcej
                </a>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Desktop version -->
    <div class="hidden md:flex gap-2 h-[500px]">
      {serviceAreas.map((area) => (
        <div
          class={`relative overflow-hidden rounded-2xl transition-all duration-500 ease-in-out group
            ${area.isMain ? 'w-2/6 cursor-default bg-secondary' : 'w-1/6 hover:w-3/6 cursor-pointer'}`}
        >
          <div class="absolute inset-0">
            <img
              src={area.image}
              alt={area.name}
              class="w-full h-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-secondary/80" />
          </div>

          <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3 class="text-lg font-bold text-white mb-2">
              {area.name}
            </h3>

            {area.isMain && area.description && (
              <p class="text-gray-200 text-lg">
                {area.description}
              </p>
            )}

            {!area.isMain && (
              <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <a
                  href={area.slug}
                  class="inline-flex items-center px-4 py-2 bg-primary text-secondary rounded-full hover:bg-primary/90 transition-colors"
                >
                  Zobacz więcej
                </a>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>