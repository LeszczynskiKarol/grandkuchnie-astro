---
// KitchenTypesSection.astro
import { kitchenTypes } from '../data/services';
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-secondary mb-4">
        Czym siÄ™ zajmujemy?
      </h2>
      <p class="text-xl text-gray-600">
        Tworzymy kuchnie na wymiar dopasowane do Twoich potrzeb
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {kitchenTypes.map((type, index) => (
        <a
          href={`/uslugi/${type.slug}`}
          class="group"
        >
          <div
            class="relative h-80 rounded-2xl overflow-hidden animate-fade-in"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Background image -->
            <div class="absolute inset-0">
              <img
                src={type.image}
                alt={type.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              />
            </div>

            <!-- Gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-secondary/90 via-secondary/50 to-transparent" />

            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-6 transform transition-transform duration-300 group-hover:-translate-y-2">
              <h3 class="text-2xl font-bold text-white mb-2">
                {type.name}
              </h3>
              <p class="text-gray-200 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                {type.description}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>