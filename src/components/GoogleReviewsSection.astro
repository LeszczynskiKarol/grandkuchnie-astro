---
// GoogleReviewsSection.astro
// Placeholder - docelowo dane będą pobierane z Lambda + API Gateway

// Hardkodowane opinie (do zastąpienia API)
const reviews = [
  {
    author_name: 'Sylwia',
    rating: 5,
    text: 'Na firmę Meble System zdecydowałam się na podstawie wielu pozytywnych opinii w internecie i to był trafiony strzał. Pan Arek od początku projektu szaf...',
    date: '18.05.2025',
  },
  {
    author_name: 'Agnieszka Gruszczyńska',
    rating: 5,
    text: 'Współpraca z firmą Meble System od samego początku była bardzo dobra. Pan Jacek doradzał na kazdym etapie, świetny kontakt telefoniczny i mailowy, wy...',
    date: '2.08.2024',
  },
  {
    author_name: 'Marta Dobrogoszcz',
    rating: 5,
    text: 'Firma znaleziona przez internet. Zdecydowaliśmy się dzięki bardzo dobrym opiniom. I był to strzał w dziesiątkę. Cała współpraca przebiegała sprawnie i...',
    date: '10.02.2025',
  },
  {
    author_name: 'Julia',
    rating: 5,
    text: 'Jesteśmy ogromnie zadowoleni z realizacji wykonanej przez firmę Meble System. Przez cały proces, od wyceny do ostatecznego projektu, przeprowadził nas...',
    date: '17.11.2024',
  },
  {
    author_name: 'Magdalena Kowalska',
    rating: 5,
    text: 'Polecam wszystkim tę firmę, od pierwszego spotkania Pan Jacek służył mi pomocą i radą, a przede wszystkim wykazał zainteresowanie przyjęciem niewielki...',
    date: '1.08.2025',
  },
];

const totalRating = 4.9;
const totalReviews = 109;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-secondary mb-12">
      Jak nas oceniają klienci?
    </h2>
    
    <div>
      <!-- Rating summary -->
      <div class="text-center mb-8">
        <div class="text-4xl font-bold text-primary">
          {totalRating.toFixed(1)}
        </div>
        <div class="flex justify-center gap-1 my-2">
          {[...Array(5)].map((_, i) => (
            <svg
              class={`w-6 h-6 ${i < Math.round(totalRating) ? 'text-yellow-400 fill-current' : 'text-gray-300'}`}
              viewBox="0 0 24 24"
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
          ))}
        </div>
        <div class="text-gray-600">
          Na podstawie {totalReviews} opinii Google
        </div>
      </div>

      <!-- Desktop - all reviews in one row -->
      <div class="hidden lg:grid grid-cols-5 gap-4 mb-8">
        {reviews.map((review) => (
          <div class="p-4 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-9 h-9 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-sm">{review.author_name}</h3>
                <div class="flex gap-0.5">
                  {[...Array(5)].map((_, i) => (
                    <svg
                      class={`w-3 h-3 ${i < review.rating ? 'text-yellow-400 fill-current' : 'text-gray-300'}`}
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="text-gray-600 text-sm">
              {review.text.length > 150 ? review.text.slice(0, 150) + '...' : review.text}
            </p>
            <p class="mt-2 text-xs text-gray-400">{review.date}</p>
          </div>
        ))}
      </div>

      <!-- Mobile/Tablet - reviews stacked -->
      <div class="lg:hidden grid grid-cols-1 md:grid-cols-2 gap-6">
        {reviews.map((review) => (
          <div class="p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold">{review.author_name}</h3>
                <div class="flex gap-1">
                  {[...Array(5)].map((_, i) => (
                    <svg
                      class={`w-4 h-4 ${i < review.rating ? 'text-yellow-400 fill-current' : 'text-gray-300'}`}
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="text-gray-600">
              {review.text.length > 250 ? review.text.slice(0, 250) + '...' : review.text}
            </p>
            <p class="mt-2 text-sm text-gray-400">{review.date}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>